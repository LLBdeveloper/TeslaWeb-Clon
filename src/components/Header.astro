---
import Logo from './Logo.astro'
---

<header 
    id="header-nav"
    class="py-3 px-10 flex items-center fixed top-0 w-full justify-between z-40 text-white">
    <div class="flex flex-grow basic-0">
        <Logo/>
    </div >
    <nav>
        <ul class="flex text-sm [&>li>a]:white [&>li>a]:font-medium [&>li>a]:inline-block [&>li>a]:px-4 [&>li>a]:py-2">
            <li><a class='hover:bg-gray-100 rounded hover:text-gray-500'href="#">Model S</a></li>
            <li><a class='hover:bg-gray-100 rounded  hover:text-gray-500'href="#">Model 3</a></li>
            <li><a class='hover:bg-gray-100 rounded hover:text-gray-500'href="#">Model X</a></li>
            <li><a class='hover:bg-gray-100 rounded hover:text-gray-500'href="#">Model Y</a></li>
            <li><a class='hover:bg-gray-100 rounded hover:text-gray-500'href="#">Powerwall</a></li>
            <li><a class='hover:bg-gray-100 rounded hover:text-gray-500'href="#">Carga</a></li>
        </ul>
    </nav>

    <nav class="flex flex-grow justify-end basis-0">
        <ul class="flex text-sm [&>li>a]:white [&>li>a]:font-medium [&>li>a]:inline-block [&>li>a]:px-4 [&>li>a]:py-2">
            <li><a class='hover:bg-gray-100 rounded'href="#">Soporte</a></li>
            <li><a class='hover:bg-gray-100 rounded'href="#">Tienda</a></li>
            <li><a class='hover:bg-gray-100 rounded'href="#">Cuenta</a></li>
            <li><a class='hover:bg-gray-100 rounded'href="#">Menu</a></li>
        </ul>
    </nav>
</header>



