---
import Footer from '../components/Footer.astro'

---
<section class=" bg-black h-screen w-screen text-center  overflow-hidden  relative">
            
    <div class="z-30 relative h-full flex flex-col">
        <header >
            <h2 class="text-black pt-40 text-4xl font-medium">Carga</h2>
            
        </header>

        <footer class=" flex flex-grow  justify-end flex-col pb-20">
            <div>
                <a  class="text-black border-grey/5 backdrop-blur-sm border-[3px] text-sm rounded font-medium px-12 py-2 inline-block hover:bg-black hover:text-white transition-colors" href="#">Accesories Shop</a>
            </div>
        </footer>
        <div >
            <Footer/>
        </div>
    </div>
    

    <div class="absolute top-0 bottom-0 h-full w-full z-10">
        <img src="../../public/accesories.jpg" 
        alt=""
        class=" h-full w-full object-cover object-center"
        />
    </div>
    
</section>
